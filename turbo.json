{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^db:generate"],
    },
    "lint": {},
    "test": {},
    "db:generate": {
      "cache": false
    },
    "db:migrate-dev": {
      "cache": false,
      "persistent": true // This is necessary to interact with the CLI and assign names to your database migrations.
    },
    "db:migrate-deploy": {
      "cache": false
    }
  }
}
